{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system, either a customer or an admin.",
      "properties": {
        "name": {
          "type": "string",
          "description": "User full name"
        },
        "email": {
          "type": "string",
          "description": "Authentication email",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "'user' or 'admin'",
          "enum": ["user", "admin"]
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "address": {
          "type": "string",
          "description": "Delivery address"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of user creation",
          "format": "date-time"
        }
      },
      "required": ["name", "email", "role", "createdAt"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents a catering product offered.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Product name"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "price": {
          "type": "number",
          "description": "Price in INR"
        },
        "imageUrl": {
          "type": "string",
          "description": "Link to Firebase Storage",
          "format": "uri"
        },
        "category": {
          "type": "string",
          "description": "Snacks, sweets, meals, etc"
        },
        "createdBy": {
          "type": "string",
          "description": "Admin UID"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of product creation",
          "format": "date-time"
        }
      },
      "required": ["name", "description", "price", "imageUrl", "category", "createdBy", "createdAt"]
    },
    "CartItem": {
      "title": "CartItem",
      "type": "object",
      "description": "Represents an item within a user's shopping cart.",
      "properties": {
        "quantity": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "productId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        }
      },
      "required": ["quantity", "price", "productId", "name"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a customer's order.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Customer's UID"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["productId", "name", "quantity", "price"]
          }
        },
        "totalAmount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["Pending", "Accepted", "Processing", "Out For Delivery", "Completed"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "address": {
          "type": "string"
        }
      },
      "required": ["userId", "items", "totalAmount", "status", "createdAt", "address"]
    },
    "Log": {
      "title": "Log",
      "type": "object",
      "description": "Represents a log of an important system action.",
      "properties": {
        "type": {
          "type": "string",
          "description": "e.g., 'CREATE_ORDER', 'LOGIN', 'ADD_PRODUCT'"
        },
        "userId": {
          "type": "string",
          "description": "UID of user who performed action"
        },
        "description": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["type", "userId", "description", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles and roles."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores all available catering products."
    },
    "/carts/{userId}/items/{productId}": {
      "schema": { "$ref": "#/entities/CartItem" },
      "description": "Nests each user's cart items under their user ID for security."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores all orders from all users."
    },
    "/logs/{logId}": {
      "schema": { "$ref": "#/entities/Log" },
      "description": "Stores logs for important system events."
    }
  }
}
