rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Development Rules ---
    // These rules are open to allow for rapid development.
    // Any signed-in user can read and write to any document.
    // TODO: Secure these rules before deploying to production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Helper functions (kept for reference when tightening rules later)
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDataOwner(resourceId) {
        return resource.data.userId == resourceId
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
